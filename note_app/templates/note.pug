
extends page.pug

include _helpers.pug

block contents
  section.section
    .container
      if note
        h1.title.is-1= note.title
        .subtitle.is-5
          p #[strong Date:] #{note.timestamp}
          if note.category
            p #[strong Category:] #{note.category}
          if note.tags
            p 
              strong Tags: 
              +tag_list(note.tags)
        hr
        .content
          != note.content|markdown
      else
        h1.title.is-1 Note Not Found
